<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantDeliveyActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="12"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parcel ID:#"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/parcel_no_popup_dm_delivery_merchant"
                        android:text=""
                        android:textColor="#FF3D00"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_weight="4">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:text="Total: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_amount_popup_dm_delivery_merchant"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#FF3D00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" à§³"
                        android:textSize="18sp"
                        android:textColor="#FF3D00"/>




                </LinearLayout>






            </LinearLayout>
            <TextView
                android:id="@+id/delivery_title_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merchant Information"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@color/colorPrimaryDark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_name_order_popup_dm__delivery_merchant"
                        android:layout_toRightOf="@+id/r1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/r15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Type: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_payment_type_popup_dm__delivery_merchant"
                        android:layout_toRightOf="@+id/r15"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:text=""
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/r8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Time: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_order_time_order_popup_dm__delivery_merchant"
                        android:layout_toRightOf="@+id/r8"
                        android:textColor="@color/colorPrimaryDark"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_phone_order_popup_dm_delivery_merchant"
                        android:layout_toRightOf="@+id/r2"
                        android:textColor="@color/colorPrimaryDark"
                        android:text=""
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/r6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thana: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_thana_order_popup_dm_delivery_merchant"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/r6"
                        android:text=""
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/r7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details Address: "
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buyer_details_address_order_popup_dm_delivery_merchant"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/r7"
                        android:text=""
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/merchant_call"
                    android:layout_marginBottom="20dp"
                    >

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/dm_call_button_merchant_delivery"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_call"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_round"/>

                </RelativeLayout>





            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Information"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@color/colorPrimaryDark"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/merchant_parcel_details_delivery_recyclerView_delivery_merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">
                <Button
                    android:id="@+id/complete_merchant_delivery_button_popup_dm_delivery_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:background="#1F7E24"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimary"/>



            </RelativeLayout>





        </LinearLayout>


    </ScrollView>


</RelativeLayout>